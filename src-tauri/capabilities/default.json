{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-confirm",
    "dialog:allow-message",
    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [{ "path": "**" }]
    }
  ]
}